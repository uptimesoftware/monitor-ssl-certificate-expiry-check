<?xml version="1.0" encoding="UTF-8"?>
<uptime xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.uptimesoftware.com/erdc/erdc erdc"
	xmlns="http://www.uptimesoftware.com/erdc/erdc"
	xmlns:upt="http://www.uptimesoftware.com/erdc/erdc" version="4.0" target_grouping="other">
	<class>SSL Certificate Expiry </class>
	<exec>com.uptimesoftware.uptime.erdc.MonitorCustomScriptRunner</exec>
	<elements>
		<element name="process" parameter_type="input" data_type="string" gui_basic="1" range_type="0">
			<control_options> size:40 </control_options>
			<default_value>scripts/MonitorSSLCertificateExpiry/MonitorCertificateExpiry.bat</default_value>
			<short_description>Script Name</short_description>
			<long_description>Name of the script/binary/process to be executed by up.time </long_description>
			<validation_rule>
				<alphanumeric/>
			</validation_rule>
			<error_message>
				<alphanumeric>required field</alphanumeric>
			</error_message>
			<gui_type>
				<string/>
			</gui_type>
		</element>
		<element name="args" parameter_type="input" data_type="string" gui_basic="1" range_type="0">
			<control_options> size:40 </control_options>
			<default_value>https://site.com/</default_value>
			<short_description>URL to site with certificate</short_description>
			<long_description>Example: https://www.myserver.com/</long_description>
			<validation_rule/>
			<error_message/>
			<gui_type>
				<string/>
			</gui_type>
		</element>
			<group name="g_daysToExpiry" switch="0">
			<short_description>Remaining Days to Expiry</short_description>
			<long_description>Array</long_description>
			<element name='expirydays' parameter_type='output' data_type='integer'
			gui_basic='1' range_type='0' units='days'>
				<control_options>size:8</control_options>
				<default_value></default_value>
				<short_description>Remaining Days to Expiry</short_description>
				<long_description>Remaining Days to Expiry</long_description>
				<validation_rule/>
				<error_message/>
				<gui_type>
					<integer/>
				</gui_type>
			</element>
		</group>
		<group name="timerresult" switch="0">
			<short_description/>
			<long_description/>
			<element name="timer" parameter_type="output" data_type="integer" gui_basic="0" range_type="0" units="ms">
				<control_options>size:8</control_options>
				<default_value/>
				<short_description>Response time</short_description>
				<long_description>Response time in ms</long_description>
				<validation_rule/>
				<error_message/>
				<gui_type>
					<integer/>
				</gui_type>
			</element>
		</group>	
	</elements>
	<help>When running a custom script check, note that the second parameter is always the name of the assigned host.
	The script that's executed should output each variable on it's own line, otherwise up.time won't be able to capture the appropriate information.</help>
</uptime>
